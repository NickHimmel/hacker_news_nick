<div class="container">
  <div class="row main-container">
    <div class="col-sm-12 col-md-12 col-lg-12 post-container">
      <%= render "shared/post" %>
    </div>
  </div>
  <div class="row">
    <% if logged_in? %>
      <div class="col-sm-6 col-md-6 col-lg-6 form-container">
        <%= form_for(:comment, url: post_comments_path) do |f| %>
          <%= render "shared/error_messages" %>
            <div class="form-group">
              <%= f.text_area :body, :class => "form-control", size: "24x6" %>
            </div>
          <%= f.submit "Add a comment", :class => "btn btn-default" %>
        <% end %>
      </div>
    <% else %>
    <div class="col-sm-6 col-md-6 col-lg-6 form-container">
      <h3>Please login or create an account to leave a comment</h3>
    </div>
    <% end %>
  </div>
  <div class="col-sm-6 col-md-6 col-lg-6 form-container">
    <div class="row">
      <%= render "shared/comments" %>
    </div>
  </div>
</div>
