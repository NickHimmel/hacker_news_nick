<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <%= render "shared/post" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6 form-container">
      <%= form_for(:comment, url: post_comments_path) do |f| %>
        <%= render "shared/error_messages" %>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, :class => "form-control", size: "24x6"%>
          </div>
        <%= f.submit "Add a comment", :class => "btn btn-default" %>
      <% end %>
    </div>
  </div>
  <div class="col-sm-6 col-md-6 col-lg-6 form-container">
    <div class="row">
      <%= @posts %>
    </div>
  </div>
</div>
