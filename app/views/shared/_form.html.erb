<%= form_for(:post, url: user_posts_path) do |f| %>
  <%= render "shared/error_messages" %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :class => "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, :class => "form-control" %>
    </div>
  <%= f.submit "Submit", :class => "btn btn-default" %>
<% end %>
